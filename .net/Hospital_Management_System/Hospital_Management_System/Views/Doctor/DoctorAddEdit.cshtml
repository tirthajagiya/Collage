@model Hospital_Management_System.Models.DoctorModel

@{
    ViewData["Title"] = Model.DoctorID == null ? "Add Doctor" : "Edit Doctor";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="SaveDoctor" asp-controller="Doctor" method="post" novalidate>
                <input type="hidden" asp-for="DoctorID" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter doctor name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Qualification" class="form-label fw-bold">Qualification</label>
                    <input asp-for="Qualification" class="form-control" placeholder="e.g., MBBS, MD" />
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Specialization" class="form-label fw-bold">Specialization</label>
                    <input asp-for="Specialization" class="form-control" placeholder="e.g., Cardiologist" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold">Active</label>
                </div>

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-bold">Created By (User)</label>
                    <select asp-for="UserID" asp-items="ViewBag.UserList" class="form-select">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Modified" value="@DateTime.Now" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        @(Model.DoctorID == null ? "Add Doctor" : "Update Doctor")
                    </button>
                    <a asp-action="DoctorList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
