@model Hospital_Management_System.Models.UserModel

@{
    ViewData["Title"] = Model.UserID == 0 ? "Add User" : "Edit User";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="SaveUser" asp-controller="User" method="post" novalidate>
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="Modified" value="@DateTime.Now" />

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">User Name</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter user name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MobileNo" class="form-label fw-bold">Mobile Number</label>
                    <input asp-for="MobileNo" class="form-control" placeholder="Enter mobile number" />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold">Active</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        @(Model.UserID == 0 ? "Add User" : "Update User")
                    </button>
                    <a asp-action="UserList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
